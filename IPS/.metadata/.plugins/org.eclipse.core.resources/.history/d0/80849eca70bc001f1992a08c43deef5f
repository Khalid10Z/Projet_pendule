/**
  * Enable DMA controller clock
  */
static void MX_DMA_Init(void)
{

  /* DMA controller clock enable */
  __HAL_RCC_DMA2_CLK_ENABLE();

  /* DMA interrupt init */
  /* DMA2_Stream0_IRQn interrupt configuration */
  HAL_NVIC_SetPriority(DMA2_Stream0_IRQn, 0, 0);
  HAL_NVIC_EnableIRQ(DMA2_Stream0_IRQn);

}

/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};
/* USER CODE BEGIN MX_GPIO_Init_1 */
/* USER CODE END MX_GPIO_Init_1 */

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOH_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(LD2_GPIO_Port, LD2_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin : B1_Pin */
  GPIO_InitStruct.Pin = B1_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_FALLING;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(B1_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : PC0 */
  GPIO_InitStruct.Pin = GPIO_PIN_0;
  GPIO_InitStruct.Mode = GPIO_MODE_ANALOG;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(GPIOC, &GPIO_InitStruct);

  /*Configure GPIO pin : LD2_Pin */
  GPIO_InitStruct.Pin = LD2_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(LD2_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : PB4 */
  GPIO_InitStruct.Pin = GPIO_PIN_4;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_RISING;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(GPIOB, &GPIO_InitStruct);

  /* EXTI interrupt init*/
  HAL_NVIC_SetPriority(EXTI4_IRQn, 0, 0);
  HAL_NVIC_EnableIRQ(EXTI4_IRQn);

/* USER CODE BEGIN MX_GPIO_Init_2 */
/* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */
void HAL_ADC_ConvCpltCallback(ADC_HandleTypeDef *hadc) {
    if (hadc->Instance == ADC1) {

    	//Encoder
    	current_count = TIM3->CNT;
    	current_count = current_count/4;
        angle_encodeur = (current_count * 360.f) / 2048;
        //if(angle_encodeur < 10 && angle_encodeur > -3 && angle_encodeur != 0){
        	//TIM3->CNT = 0;
        //}
        //angle_encodeur -= 195;
        //Vitesse derive du potion
        vel_derv = angle_encodeur - prev_angle_enc;

        /*if(fabs(angle_encodeur) > 360){
        	TIM3->CNT = 0;
        }*/

        //Vitesse
        angular_velocity = (angle_encodeur - previous_angle) / (0.005);
        linear_velocity = angular_velocity * PENDULUM_LENGTH;

        angle_radian = angle_encodeur * (3.1415 / 180.0f);

        // Déplacement
        linear_displacement = PENDULUM_LENGTH * angle_radian;
        previous_angle = angle_encodeur;

        //Position potentionmetre
    	pot_pos = (adc_buffer[3] * 360.f) / 1700.0f;

    	if(pot_pos <= 360 && pot_pos > 180){
    		pot_pos = pot_pos - 360;
    	}

        // Traitement des données du buffer ADC
        x_voltage = ((adc_buffer[0] * 1.1f) / 1450.0f);
        y_voltage = ((adc_buffer[1] * 1.6f) / 1450.0f);
        //z_voltage = ((adc_buffer[2] * 3.3f) / 4096.0f);

        x_accel = ((x_voltage - 0.55)/ 0.330)*9.81;
        y_accel = ((y_voltage - 0.8)/ 0.330)*9.81;
        //z_accel = ((z_voltage - 1.65)/ 0.330)*9.81;

    	accel = sqrtf((x_accel * x_accel) + (y_accel * y_accel));

    	vel_intgr = prev_vel_intgr + accel;

    	if (fabs(accel) < 0.05) { // Seuil d'accélération proche de zéro
    	    vel_intgr = 0.0f;      // Réinitialiser la vitesse intégrée
    	}

    	prev_vel_intgr = vel_intgr;
    	prev_angle_enc = angle_encodeur;

        // Envoi des données seulement après un délai
        uint32_t current_time = HAL_GetTick();
        if ((current_time - last_send_time) >= 30) { // 500 ms de délai
            snprintf(buffer, sizeof(buffer), "pot:%.2f, encd:%.2f, accel:%.2f, enc:%d\r\n",
                     pot_pos, angle_encodeur, accel, (TIM3->CNT));
            HAL_UART_Transmit(&huart2, (uint8_t *)buffer, strlen(buffer), HAL_MAX_DELAY);
            last_send_time = current_time;
        }
    }
}

/* USER CODE END 4 */

